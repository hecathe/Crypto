		script(src="assets/scripts/svg4everybody.min.js")

		//- https://imask.js.org
		script(src="assets/scripts/imask.min.js")

		//- https://github.com/michu2k/Accordion
		script(src="assets/scripts/accordion.min.js")

		//- https://swiperjs.com/
		script(src="assets/scripts/swiper-bundle.min.js")

		//- https://github.com/nextapps-de/spotlight
		script(src="assets/scripts/spotlight.bundle.js")

		//- https://github.com/WICG/focus-visible
		script(src="assets/scripts/focus-visible.min.js")

		script(src="assets/scripts/main.js")
